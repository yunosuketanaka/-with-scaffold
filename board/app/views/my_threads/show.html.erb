<p id="notice"><%= notice %></p>

<h2>
  <strong>Title:</strong>
  <%= @my_thread.title %>
</h2>

<p>
  <strong>Body:</strong>
  <%= @my_thread.body %>
</p>

<%= link_to 'Edit', edit_my_thread_path(@my_thread) %> |
<%= link_to 'Back', my_threads_path %>



<h3>Comments</h3>
<% if @my_thread.comments.any? %>
  <% @my_thread.comments.each do |comment| %>
<ul>
  <li><%= comment.body %></li>
</ul>
  <p><%= link_to '[Edit]', edit_my_thread_comment_path(:id => comment, :my_thread_id => @my_thread) %> 
  <%= link_to '[x]', my_thread_comment_path(:id => comment, :my_thread_id => @my_thread), method: :delete, data: { confirm: 'Are you sure?' } %> </p>
  <% end %>
<% end %>


